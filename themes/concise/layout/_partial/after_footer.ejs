}());
</script>
<% } %>

<script>
	
	var rightP = $('#rightPanel');
	var rightPanelFun = function() {
		if(window.scrollY < 55 || document.body.clientWidth < 824){
			rightP.css({
				position: 'static',
				top		: '0px',
				width	: 'auto'
			});
		} else {
			rightP.css({
				position: 'fixed',
				top		: '20px',
				width	: '270px'
			});
		}
	}
	$(window).on({
		scroll: rightPanelFun,
		resize: rightPanelFun
	})
	
</script>

